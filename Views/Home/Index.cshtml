                    <input id='titulo' placeholder='Titulo del mensaje' class='common-input mb-20 form-control' required='' type='text'>
                </div>
                <div class="col-lg-6 form-group">
                    <textarea id='mensaje' class='common-textarea mt-10 form-control' name='message' placeholder='Texto del mensaje' onfocus='this.placeholder = ''' onblur='this.placeholder = 'Texto del mensaje'' required=''></textarea>
                    <button id='btnEnvioCorreo' class='primary-btn mt-20'>Enviar mensaje<span class='lnr lnr-arrow-right'></span></button>
                    <div class='mt-10 alert-msg'>
                    </div>
                </div>
            </div>
            </form>


        </div>
</section>
